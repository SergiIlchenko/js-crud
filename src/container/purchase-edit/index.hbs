<main class="main">
	{{#with data}}
	<form method="POST" action="/purchase-edit">
		<div class="purchase-edit__block">
			{{> heading title='Зміна данних'}}
			<div class="purchase-item__block-id">
				<span class='title'>ID:</span>
				<span class='text'>{{id}}</span>
			</div>
			<div class="purchase-content">
				<div class="purchase__filed">
					<label for="lastname" class="form__label">Прізвище:</label>
					<input type="text" name='lastname' class="form__input" value={{lastname}}>
				</div>
				<div class="purchase__filed">
					<label for="firstname" class="form__label">Ім'я:</label>
					<input type="text" name="firstname" class="form__input" value={{firstname}}>
				</div>
				<div class="purchase__filed">
					<label for="email" class="form__label">Електронна пошта:</label>
					<input type="email" name="email" class="form__input" value={{email}}>
				</div>
				<div class="purchase__filed">
					<label for="phone" class="form__label">Мобільний телефон:</label>
					<input type="number" name="phone" class="form__input" value={{phone}}>
				</div>
			</div>
			{{> button text="Зберегти зміни" }}
		</div>
	</form>
	{{/with}}
</main>