<main>
	<section>
		<div class="form">
			<h1 class="form__title">Редагування товару</h1>
			{{#with data}}
			<form method="POST" action="/product-edit">
				<div class="form__product">
					<h2 class="form__info">Інформація про товар</h2>
					<div class="form__content">
						<div class="form__filed">
							<label for="name" class="form__label">Назва товару</label>
							<input type="name" name='name' class="form__input" value='{{name}}'>
						</div>
						<div class="form__filed">
							<label for="price" class="form__label">Ціна</label>
							<input type="price" name="price" class="form__input" value='{{price}}'>
						</div>
						<div class="form__filed">
							<label for="id" class="form__label">ID</label>
							<input type="id" name="id" class="form__input" value='{{id}}'>
						</div>
					</div>
					<div class="form__filed">
						<label for="description" class="form__label">Короткий опис товару</label>
						<div>
							<textarea type="description" name="description"
								class="form__input form__description">{{description}}</textarea>
						</div>
						<div class="form__text">Відображується у картці товару</div>
					</div>
					<div class="form__button">
						<button class="form__button__save">Зберегти оновлення</button>
						<a class="form__button__delete" href="/product-delete?id={{id}}">Видалити товар</a>
					</div>
				</div>
			</form>
			{{/with}}
		</div>
	</section>
</main>