<main>
	<section>
		<div class="form">
			<h1 class="form__title">Список товарів</h1>
			<div class="product-list">
				{{#with data.products}}
				{{#if isEmpty}}
				<mark>Пустий</mark>
				{{else}}

				{{#each list}}
				{{> product-card}}
				{{/each}}

				{{/if}}
				{{/with}}
			</div>
		</div>
	</section>
</main>